<core:FragmentDefinition
    xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ResponsivePopover     
		title="{i18n>App.ChengeTheme}"        
		class="sapUiPopupWithPadding"
		placement="Bottom">		
        <endButton>
			<Button text="{i18n>Commom.Close}" press="handleClosePopOverSystemConfig" />
		</endButton>	
		<content>
          	<VBox> 
				<HBox>				
					<Label class="sapUiResponsiveMargin sapMResponsiveMargin " text="{i18n>App.Theme}"  labelFor="number"  />				
					<Select
						selectedKey="{/Theme}" 
						change="applyConfig"                              
						items="{path: 'oViewModelSelections>/themes', templateShareable:false}">
						<core:Item key="{oViewModelSelections>Id}"  text="{oViewModelSelections>Description}" />
					</Select>
				</HBox>						
			</VBox>		
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>

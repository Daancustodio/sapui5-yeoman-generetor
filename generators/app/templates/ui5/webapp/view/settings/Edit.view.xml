<mvc:View 
	controllerName="<%= appName %>.controller.settings.Edit" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core" 
	xmlns="sap.m">

	<Page 
	id="settingsPage"  
	navButtonPress="onNavBack" 
	showNavButton="true" 	
	title="{i18n>Commom.Menu.Settings}">

		<content>
			<IconTabBar id="idIconTabBar" applyContentPadding="true">
				<items>
					<IconTabFilter icon="sap-icon://user-settings" iconColor="Critical" text="{i18n>Settings.User}">					
						<l:Grid defaultSpan="L4 M6 S6" class="sapUiSmallMarginTop">
							<l:content>										
								<VBox>																								
									<Label  text="{i18n>App.Theme}"  labelFor="number"  />				
									<Select										
										selectedKey="{Settings>/Theme}" 
										change="applyConfig"                              
										items="{path: 'oViewModelSelections>/themes', templateShareable:false}">
										<core:Item key="{oViewModelSelections>Id}"  text="{oViewModelSelections>Description}" />
									</Select>																	
								</VBox>		
							</l:content>
						</l:Grid>
					</IconTabFilter>
					<IconTabSeparator />
					<IconTabFilter icon="sap-icon://performance" iconColor="{path : 'Settings>/MaxRecordsPerSearch', formatter: '.formatter.formatIconColor'}" text="{i18n>App.Performance}">					
						<l:Grid defaultSpan="L12 M12 S12" class="sapUiSmallMarginTop">
							<l:content>																			
								<VBox>	
								<ObjectStatus
									class="sapUiSmallMarginBottom"
									text="{i18n>App.MaxRecordsPerSearch}"
									state="{
										path: 'Settings>/MaxRecordsPerSearch',
										formatter: '.formatter.maxRecordsPerSearch'
									}" />																							
									
									<Slider min="25" max="300"  change="Save"   value="{Settings>/MaxRecordsPerSearch}"   step="25"  enableTickmarks="true" class="sapUiSmallMarginBottom" width="100%">
										<ResponsiveScale tickmarksBetweenLabels="3"/>
									</Slider>													
								</VBox>
								
							</l:content>
						</l:Grid>
					</IconTabFilter>
					<IconTabSeparator />
					<IconTabFilter icon="sap-icon://numbered-text" iconColor="Positive" text="{i18n>Commom.DocumentNumber}">					
						<l:Grid defaultSpan="L12 M12 S12">
							<l:content>									
																																									
								<!-- 	<Table
										id="documentsNumberControlId"							
										items="{path: 'DocumentNumbers>/', templateShareable : 'false'}">
										<headerToolbar>
											<Toolbar>
												<Title text="{i18n>Commom.DocumentNumber}" level="H2" />
											</Toolbar>
										</headerToolbar>
										<columns>							
											<Column demandPopin="true" minScreenWidth="Tablet" >
												<Text text="{i18n>Settings.ObjType}" />
											</Column>								
											<Column demandPopin="true" minScreenWidth="Tablet">
												<Text text="{i18n>Settings.InitialNumber}" />
											</Column>
											<Column demandPopin="true" minScreenWidth="Tablet">
												<Text text="{i18n>Settings.NextNumber}" />
											</Column>
											<Column demandPopin="true" minScreenWidth="Tablet" >
												<Text text="{i18n>Settings.BeginString}" />
											</Column>								
											<Column demandPopin="true" minScreenWidth="Tablet" >
												<Text text="{i18n>Settings.NumDigits}" />
											</Column>
											<Column demandPopin="true" minScreenWidth="Tablet">
												<Text text="{i18n>Settings.Code}" />
											</Column>
										</columns>
										<items>
											<ColumnListItem>
												<cells>	
													<ObjectNumber number="{DocumentNumbers>ObjType}" />																		
													<ObjectNumber number="{DocumentNumbers>InitialNumber}"  />
													<Text text="{DocumentNumbers>NextNumber}"/>										
													<Text text="{DocumentNumbers>BeginString}"/>																																	
													<ObjectIdentifier title="{DocumentNumbers>NumDigits}"/> 													
													<Text text="{DocumentNumbers>Code}"/>											
												</cells>
											</ColumnListItem>
										</items>
									</Table>  -->	

									<l:HorizontalLayout 
										allowWrapping="true" 
										id="documentsNumberControlId" 
										content="{DocumentNumbers>/}">
										<GenericTile 
										header="{path:'DocumentNumbers>ObjType', formatter:'.formatter.documentType'}" 
										subheader="{i18n>Settings.NextNumber}" 
										state="{=${state} || 'Loaded'}" 
										scope="Display"
										class="sapUiTinyMargin ">
											<TileContent 
												unit="Inicial"
												footer="{DocumentNumbers>InitialNumber}">
												<NumericContent 
												icon="sap-icon://number-sign" 
												value="{DocumentNumbers>NextNumber}" 
												valueColor="Good" 
												indicator="Up" 
												scale="N" />
											</TileContent>
										</GenericTile>
									</l:HorizontalLayout> 							
									
								
							</l:content>
						</l:Grid>
					</IconTabFilter>
						<IconTabFilter icon="sap-icon://action-settings" iconColor="Positive" text="{i18n>Commom.GeneralSettings}">					
						<l:Grid defaultSpan="L12 M12 S12">
							<l:content>	
									<l:HorizontalLayout 
										allowWrapping="true">
										<GenericTile 

										header="Cabecalho da configuração" 
										subheader="Sub titulo" 										
										scope="Display"
										class="sapUiTinyMargin ">
											<TileContent 

												unit="unidate se necessario"
												footer="Footer">
												<NumericContent 
												press="navToMeasurementUnit" 
												icon="sap-icon://number-sign" 
												value="{DocumentNumbers>NextNumber}" 
												valueColor="Good" 
												indicator="Up" 
												scale="N" />
											</TileContent>
										</GenericTile>
									</l:HorizontalLayout> 							
									
								
							</l:content>
						</l:Grid>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>		
	</Page>
</mvc:View>